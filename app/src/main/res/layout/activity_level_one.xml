<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
		android:background="@drawable/brand_gradient"
		xmlns:android = "http://schemas.android.com/apk/res/android"
		xmlns:tools = "http://schemas.android.com/tools"
		xmlns:app = "http://schemas.android.com/apk/res-auto"
		android:layout_width = "match_parent"
		android:layout_height = "match_parent"
		tools:context = ".LevelOne">
	
	
	
	
	<ScrollView
			android:layout_width = "match_parent"
			android:layout_height = "match_parent">
		
		

		<LinearLayout
				android:orientation="vertical"
				android:layout_width = "match_parent"
				android:layout_height = "match_parent">
			
			
			<RelativeLayout
					android:layout_width = "match_parent"
					android:layout_height = "60dp">
				
				
				<TextView
						android:textColor="@color/black"
						android:gravity="center"
						android:textSize="25sp"
						android:paddingBottom="10dp"
						android:layout_width="match_parent"
						android:layout_height="50dp"
						android:text="Introduction"
						android:textStyle="bold"
						android:layout_marginTop="20dp"
						/>
				
				<ImageView
						android:id="@+id/back_image"
						android:tint="@color/black"
						android:scaleType="fitXY"
						android:layout_marginStart="20dp"
						android:layout_marginTop="23dp"
						android:layout_marginEnd="20dp"
						android:src="@drawable/icon_back_button"
						android:layout_width="24dp"
						android:layout_height="24dp"/>
			
			
			</RelativeLayout>
			
			
			<androidx.cardview.widget.CardView
					app:cardCornerRadius="20dp"
					android:elevation="20dp"
					android:layout_margin="20dp"
					android:layout_width = "match_parent"
					android:layout_height = "400dp">
				
				<RelativeLayout
						android:layout_width = "match_parent"
						android:layout_height = "wrap_content">
					
					
					<com.example.learnmoney.TypeWriter
							android:id="@+id/text1"
							android:layout_marginStart="20dp"
							android:layout_marginTop="100dp"
							android:textColor="#444242"
							android:textStyle="bold"
							android:textSize="32sp"
							android:text="Hey, I am Richie, \n\nLet's learn the basic of \nMutual Funds today."
							android:layout_width = "200dp"
							android:layout_height = "wrap_content"/>
					
					
					<ImageView
							android:layout_width = "230dp"
							android:scaleType="fitXY"
							android:layout_alignParentEnd="true"
							android:src="@drawable/rr"
							android:layout_height = "200dp"/>
				
				
				</RelativeLayout>
				
			</androidx.cardview.widget.CardView>
			
			
			
			<RelativeLayout
					android:layout_width = "match_parent"
					android:layout_height = "200dp"
					>
				
				<TextView
						
						android:layout_alignParentEnd="true"
						android:layout_alignParentBottom="true"
						android:layout_marginBottom="100dp"
						android:id="@+id/continueButton"
						android:visibility="gone"
						android:textColor="@color/black"
						android:textSize="17dp"
						android:textStyle="bold"
						android:gravity="center"
						android:elevation="20dp"
						android:background="@drawable/layout_round_button"
						android:text="Continue"
						android:layout_marginStart="20dp"
						android:layout_marginEnd="20dp"
						android:layout_width = "100dp"
						android:layout_height = "50dp"
						/>
				
			</RelativeLayout>
		
		
		</LinearLayout>
		
		
	</ScrollView>
	

</RelativeLayout>